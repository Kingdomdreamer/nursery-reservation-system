# ===================================
# Nursery Reservation System
# Environment Variables Template
# ===================================

# ---------------------------
# アプリケーション基本設定
# ---------------------------
NEXT_PUBLIC_APP_NAME="種苗店予約システム"
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"

# ---------------------------
# Supabase設定
# ---------------------------
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ---------------------------
# LINE LIFF設定
# ---------------------------
# 開発環境用LIFF ID
NEXT_PUBLIC_LIFF_ID_DEV="123456789-xxxxxxxx"

# ステージング環境用LIFF ID
NEXT_PUBLIC_LIFF_ID_STAGING="123456789-yyyyyyyy"

# 本番環境用LIFF ID（ベジライス）
NEXT_PUBLIC_LIFF_ID_PROD="123456789-zzzzzzzz"

# ---------------------------
# LINE Messaging API設定
# ---------------------------
LINE_CHANNEL_ACCESS_TOKEN="your-channel-access-token"
LINE_CHANNEL_SECRET="your-channel-secret"

# ---------------------------
# メール送信設定（オプション）
# ---------------------------
# 予約完了メール送信用
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ---------------------------
# セキュリティ設定
# ---------------------------
# JWT秘密鍵（ランダムな文字列を生成）
JWT_SECRET="your-jwt-secret-key-here"

# セッション暗号化キー
SESSION_SECRET="your-session-secret-key-here"

# ---------------------------
# 外部API設定
# ---------------------------
# 郵便番号検索API（zipcloud）- デフォルトで使用
ZIPCODE_API_URL="https://zipcloud.ibsnet.co.jp/api/search"

# ---------------------------
# 管理者設定
# ---------------------------
# 管理者パスワード（初期設定用）
ADMIN_DEFAULT_PASSWORD="change-this-password"

# 管理者メールアドレス
ADMIN_EMAIL="admin@your-domain.com"

# ---------------------------
# ログ・監視設定
# ---------------------------
# ログレベル（error, warn, info, debug）
LOG_LEVEL="info"

# エラー追跡（Sentry等）
SENTRY_DSN=""

# ---------------------------
# 本番環境用追加設定
# ---------------------------
# データベースバックアップ設定
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # 毎日午前2時

# ファイルアップロード設定
MAX_FILE_SIZE="10485760"  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# ---------------------------
# 開発環境用設定
# ---------------------------
# デバッグモード
DEBUG_MODE="false"

# ホットリロード設定
HOT_RELOAD="true"

# API遅延シミュレーション（ミリ秒）
API_DELAY_MS="0"